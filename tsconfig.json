/**
* TypeScript Configuration
*
* Basic config file to automatically parse ES6 to ES5 compatible code
*/
{
    "compilerOptions": {
        "compileOnSave": true,
        "module": "CommonJS",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "charset": "utf-8",
        "target": "es5",
        // Remove Slashes to generate on big file //
        "outFile": "dist/SecondCure.js",
        "outDir": "dist"
    },
    "include": [
        "src/**/*"
    ]
}
